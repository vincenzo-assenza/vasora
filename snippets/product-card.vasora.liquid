{%- comment -%}
Unified product-card snippet for Vasora (variant)
Usage: {% render 'product-card.vasora', product: product %}
{%- endcomment -%}
<article class="product-card vasora v-card" data-product-id="{{ product.id }}" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__media v-container">
      {% if product.images.size > 0 %}
        <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.featured_image.alt | escape }}" loading="lazy" />
      {% else %}
        <div class="product-card__placeholder"></div>
      {% endif %}
    </div>
    <div class="product-card__meta">
      <h3 class="product-card__title">{{ product.title }}</h3>
      <div class="product-card__price">{% if product.price_varies %}{{ product.price_min | money }} - {{ product.price_max | money }}{% else %}{{ product.price | money }}{% endif %}</div>
      {% if product.compare_at_price > product.price %}
        <div class="v-badge">Sale</div>
      {% endif %}
      <button class="v-button v-button--ghost" data-action="add-to-cart" data-variant-id="{{ product.selected_or_first_available_variant.id }}" aria-label="Add {{ product.title }} to cart">Add</button>
    </div>
  </a>
</article>
