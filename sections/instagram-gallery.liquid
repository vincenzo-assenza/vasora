{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign handle_tag = section.settings.handle_tag | default: 'h2' -%}

<section class="instagram-gallery"{% if section.settings.anchor_id != blank %} id="{{ section.settings.anchor_id | escape }}"{% endif %} style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;">
  <div class="instagram-gallery__inner">
    <{{ eyebrow_tag }} class="instagram-gallery__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
    <{{ handle_tag }} class="instagram-gallery__handle">{{ section.settings.handle }}</{{ handle_tag }}>
  </div>
  <div class="instagram-gallery__grid">
    {% for block in section.blocks %}
      <a class="instagram-gallery__item" href="{{ block.settings.link }}" aria-label="Instagram post" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{
            block.settings.image
            | image_url: width: 900
            | image_tag: loading: 'lazy', widths: '360, 540, 720, 900', alt: block.settings.alt
          }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder' }}
        {% endif %}
      </a>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .instagram-gallery {
    padding: var(--space-6) 0;
    background: #f4f4f2;
  }
  .instagram-gallery__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto var(--space-5);
    text-align: center;
  }
  .instagram-gallery__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.24em;
    font-size: 0.65rem;
    color: var(--color-muted);
    margin-bottom: var(--space-2);
  }
  .instagram-gallery__handle {
    font-size: clamp(1.4rem, 3vw, 2rem);
    letter-spacing: 0.18em;
    text-transform: uppercase;
    margin: 0;
  }
  .instagram-gallery__grid {
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    gap: var(--space-4);
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
  }
  .instagram-gallery__item {
    position: relative;
    display: block;
    overflow: hidden;
  }
  .instagram-gallery__item img,
  .instagram-gallery__item svg {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 1100px) {
    .instagram-gallery__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
  @media (max-width: 640px) {
    .instagram-gallery__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
{% endstylesheet %}

