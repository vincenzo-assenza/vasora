{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h1' -%}

<section
  class="page-404 u-section"
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="page-404__inner">
    <{{ eyebrow_tag }} class="page-404__eyebrow">404</{{ eyebrow_tag }}>
    <{{ heading_tag }} class="page-404__title">{{ '404.title' | t }}</{{ heading_tag }}>
    <p class="page-404__text">{{ '404.not_found' | t }}</p>
    <a class="page-404__link" href="{{ routes.all_products_collection_url }}">
      {{ '404.back_to_shopping' | t }}
    </a>
  </div>
</section>

{% stylesheet %}
  .page-404__inner {
    width: min(100% - 2 * var(--container-padding-inline), 700px);
    margin: 0 auto;
    text-align: center;
    display: grid;
    gap: var(--space-3);
  }
  .page-404__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.14em;
    font-size: 0.7rem;
    color: var(--color-muted);
    margin: 0;
  }
  .page-404__title {
    font-family: var(--font-accent--family);
    font-size: clamp(2rem, 4vw, 3.4rem);
    margin: 0;
  }
  .page-404__text {
    color: var(--color-muted);
    margin: 0;
  }
  .page-404__link {
    justify-self: center;
    padding: 0.85rem 1.8rem;
    --cta-bg: #111;
    --cta-fg: #fff;
    --cta-border: #111;
    background: var(--cta-bg);
    color: var(--cta-fg);
    border: 1px solid var(--cta-border);
    border-radius: 999px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: var(--cta-letter-spacing, 0.12em);
    font-size: 0.7rem;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }
  .page-404__link:hover,
  .page-404__link:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
{% endstylesheet %}

