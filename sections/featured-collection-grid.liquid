{%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
{%- assign subheading_tag = section.settings.subheading_tag | default: 'p' -%}
<section
  class="featured-collection-grid"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="featured-collection-grid__inner">
    <div class="featured-collection-grid__heading">
      {% if section.settings.heading != blank %}
        <{{ heading_tag }}>{{ section.settings.heading }}</{{ heading_tag }}>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <{{ subheading_tag }} class="featured-collection-grid__subheading">{{ section.settings.subheading }}</{{ subheading_tag }}>
      {% endif %}
    </div>

    <div class="featured-collection-grid__grid" role="list">
      {% for block in section.blocks %}
        <a
          class="featured-collection-grid__card"
          href="{{ block.settings.link }}"
          role="listitem"
          title="{{ block.settings.title | default: 'Scopri' | escape }}"
          aria-label="{{ block.settings.title | default: 'Scopri' | escape }}"
          {{ block.shopify_attributes }}
        >
          <div class="featured-collection-grid__media">
            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: 1200
                | image_tag: loading: 'lazy', widths: '480, 720, 960, 1200', alt: block.settings.title
              }}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
            {% endif %}
          </div>
          <div class="featured-collection-grid__content">
            {% if block.settings.title != blank %}
              <h3 class="featured-collection-grid__title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.price != blank %}
              <p class="featured-collection-grid__price">{{ block.settings.price }}</p>
            {% endif %}
            <span class="featured-collection-grid__cta">Scopri</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .featured-collection-grid {
    padding: var(--space-6) 0;
  }
  .featured-collection-grid__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    gap: var(--space-5);
  }
  .featured-collection-grid__heading {
    max-width: 560px;
    display: grid;
    gap: var(--space-2);
  }
  .featured-collection-grid__subheading {
    margin: 0;
    color: var(--color-muted);
  }
  .featured-collection-grid__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-5);
  }
  .featured-collection-grid__card {
    text-decoration: none;
    color: inherit;
    display: grid;
    gap: var(--space-3);
  }
  .featured-collection-grid__media {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: color-mix(in srgb, var(--color-muted) 8%, transparent);
    aspect-ratio: 4 / 5;
  }
  .featured-collection-grid__media img,
  .featured-collection-grid__media svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .featured-collection-grid__content {
    display: grid;
    gap: var(--space-1);
  }
  .featured-collection-grid__title {
    margin: 0;
    font-size: 1.05rem;
  }
  .featured-collection-grid__price {
    margin: 0;
    color: var(--color-muted);
  }
  .featured-collection-grid__cta {
    margin-top: var(--space-2);
    align-self: start;
    --cta-bg: #111;
    --cta-fg: #fff;
    --cta-border: #111;
    background: var(--cta-bg);
    color: var(--cta-fg);
    padding: 0.85rem 1.8rem;
    border: 1px solid var(--cta-border);
    border-radius: 0;
    font-size: 0.7rem;
    letter-spacing: var(--cta-letter-spacing, 0.12em);
    font-weight: 400;
    text-transform: uppercase;
    display: inline-flex;
    width: fit-content;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }
  .featured-collection-grid__card:hover .featured-collection-grid__cta,
  .featured-collection-grid__card:focus-visible .featured-collection-grid__cta {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 1024px) {
    .featured-collection-grid__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  @media (max-width: 640px) {
    .featured-collection-grid__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

