{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h1' -%}
{%- assign subheading_tag = section.settings.subheading_tag | default: 'p' -%}
{%- assign content_alignment = section.settings.content_alignment | default: 'center' -%}
{%- assign overlay_alpha = section.settings.overlay_opacity | default: 35 | times: 0.01 -%}
{%- assign desktop_video = section.settings.background_video_desktop -%}
{%- assign mobile_video = section.settings.background_video_mobile -%}
{%- assign desktop_image = section.settings.background_image -%}
{%- assign mobile_image = section.settings.background_image_mobile | default: desktop_image -%}
{%- assign media_mode = section.settings.media_mode | default: 'auto' -%}
{%- assign allow_video = true -%}
{%- if media_mode == 'image_only' -%}
  {%- assign allow_video = false -%}
{%- endif -%}

{%- assign desktop_media_type = 'none' -%}
{%- if allow_video and desktop_video != blank -%}
  {%- assign desktop_media_type = 'video' -%}
{%- elsif desktop_image != blank -%}
  {%- assign desktop_media_type = 'image' -%}
{%- endif -%}

{%- assign mobile_media_type = 'none' -%}
{%- if allow_video and mobile_video != blank -%}
  {%- assign mobile_media_type = 'video' -%}
{%- elsif mobile_image != blank -%}
  {%- assign mobile_media_type = 'image' -%}
{%- elsif desktop_image != blank -%}
  {%- assign mobile_media_type = 'image_desktop_fallback' -%}
{%- endif -%}
<section
  class="hero-main hero-main--align-{{ content_alignment }} full-width"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="
    --hero-text-color: {{ section.settings.text_color | default: '#ffffff' }};
    --hero-mobile-min-height: {{ section.settings.mobile_min_height | default: 70 }}svh;
    padding-top: {{ section.settings.padding_top | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px;
    margin-top: {{ section.settings.margin_top | default: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;
  "
>
  {% if desktop_media_type != 'none' or mobile_media_type != 'none' %}
    <div class="hero-main__media" aria-hidden="true">
      <div class="hero-main__media-desktop">
        {% if desktop_media_type == 'video' %}
          {{
            desktop_video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              playsinline: true,
              image_size: '2000x',
              class: 'hero-main__video'
          }}
        {% elsif desktop_media_type == 'image' %}
          {{
            desktop_image
            | image_url: width: 2200
            | image_tag:
              loading: 'eager',
              fetchpriority: 'high',
              widths: '800, 1200, 1600, 2000',
              class: 'hero-main__image',
              alt: ''
          }}
        {% endif %}
      </div>

      <div class="hero-main__media-mobile">
        {% if mobile_media_type == 'video' %}
          {{
            mobile_video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              playsinline: true,
              image_size: '1200x',
              class: 'hero-main__video'
          }}
        {% elsif mobile_media_type == 'image' %}
          {{
            mobile_image
            | image_url: width: 1400
            | image_tag:
              loading: 'eager',
              fetchpriority: 'high',
              widths: '480, 768, 1024, 1400',
              class: 'hero-main__image',
              alt: ''
          }}
        {% elsif mobile_media_type == 'image_desktop_fallback' %}
          {{
            desktop_image
            | image_url: width: 1400
            | image_tag:
              loading: 'eager',
              fetchpriority: 'high',
              widths: '480, 768, 1024, 1400',
              class: 'hero-main__image',
              alt: ''
          }}
        {% endif %}
      </div>
    </div>
  {% endif %}

  <div
    class="hero-main__overlay"
    style="background-color: {{ section.settings.overlay_color | default: '#000000' | color_modify: 'alpha', overlay_alpha }};"
  ></div>

  <div class="hero-main__content">
    <div class="hero-main__copy u-flow">
      {% if section.settings.eyebrow != blank %}
        <{{ eyebrow_tag }} class="hero-main__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
      {% endif %}
      {% if section.settings.heading != blank %}
        <{{ heading_tag }} class="hero-main__heading">{{ section.settings.heading }}</{{ heading_tag }}>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <{{ subheading_tag }} class="hero-main__subheading">{{ section.settings.subheading }}</{{ subheading_tag }}>
      {% endif %}
      <div class="hero-main__actions">
        {% if section.settings.primary_cta_label != blank %}
          <a
            class="hero-main__cta hero-main__cta--primary"
            href="{{ section.settings.primary_cta_link }}"
            data-analytics="hero-cta-primary"
            title="{{ section.settings.primary_cta_title | default: section.settings.primary_cta_label | escape }}"
            aria-label="{{ section.settings.primary_cta_title | default: section.settings.primary_cta_label | escape }}"
          >
            {{ section.settings.primary_cta_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-main {
    position: relative;
    min-height: clamp(520px, 85vh, 900px);
    display: grid;
    place-items: center;
    color: var(--hero-text-color, var(--color-background));
    overflow: hidden;
  }
  .hero-main__media,
  .hero-main__media-desktop,
  .hero-main__media-mobile,
  .hero-main__image,
  .hero-main__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  .hero-main__image,
  .hero-main__video {
    object-fit: cover;
  }
  .hero-main__media-desktop {
    display: block;
  }
  .hero-main__media-mobile {
    display: none;
  }
  .hero-main__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.1));
  }
  .hero-main__content {
    position: relative;
    width: 100%;
    padding-inline: var(--container-padding-inline);
  }
  .hero-main__copy {
    max-width: 720px;
    text-align: center;
    margin: 0 auto;
  }
  .hero-main--align-left .hero-main__copy {
    text-align: left;
    margin-inline: 0 auto;
  }
  .hero-main--align-right .hero-main__copy {
    text-align: right;
    margin-inline: auto 0;
  }
  .hero-main__heading {
    font-family: var(--font-primary--family);
    text-transform: uppercase;
    font-size: clamp(2.4rem, 5vw, 4.2rem);
    line-height: 1.05;
    letter-spacing: 0.22em;
  }
  .hero-main__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.28em;
    font-size: 0.65rem;
  }
  .hero-main__subheading {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.85;
  }
  .hero-main__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-top: var(--space-5);
    justify-content: center;
  }
  .hero-main--align-left .hero-main__actions {
    justify-content: flex-start;
  }
  .hero-main--align-right .hero-main__actions {
    justify-content: flex-end;
  }
  .hero-main__cta {
    text-decoration: none;
    padding: 0.6rem 1.4rem;
    border-radius: 2px;
    font-weight: 600;
    font-size: 0.72rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    transition: transform 150ms ease, box-shadow 150ms ease, opacity 150ms ease;
  }
  .hero-main__cta--primary {
    background: #fff;
    color: #111;
  }
  .hero-main__cta:hover,
  .hero-main__cta:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .hero-main {
      min-height: var(--hero-mobile-min-height, 70svh);
    }
    .hero-main__media-desktop {
      display: none;
    }
    .hero-main__media-mobile {
      display: block;
    }
    .hero-main--align-left .hero-main__copy,
    .hero-main--align-center .hero-main__copy,
    .hero-main--align-right .hero-main__copy {
      margin: 0 auto;
      text-align: center;
    }
    .hero-main__actions,
    .hero-main--align-left .hero-main__actions,
    .hero-main--align-right .hero-main__actions {
      justify-content: center;
    }
  }
{% endstylesheet %}

