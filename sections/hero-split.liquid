{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
{%- assign body_tag = section.settings.body_tag | default: 'p' -%}
<section
  class="hero-split"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="hero-split__inner hero-split__inner--{{ section.settings.image_position }}">
    <div class="hero-split__media">
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: 1600
          | image_tag: loading: 'lazy', widths: '600, 900, 1200, 1600', alt: section.settings.heading
        }}
      {% else %}
        {{ 'collection-2' | placeholder_svg_tag: 'placeholder' }}
      {% endif %}
    </div>

    <div class="hero-split__content">
      {% if section.settings.eyebrow != blank %}
        <{{ eyebrow_tag }} class="hero-split__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
      {% endif %}
      {% if section.settings.heading != blank %}
        <{{ heading_tag }} class="hero-split__heading">{{ section.settings.heading }}</{{ heading_tag }}>
      {% endif %}
      {% if section.settings.body != blank %}
        <{{ body_tag }} class="hero-split__body">{{ section.settings.body }}</{{ body_tag }}>
      {% endif %}
      <div class="hero-split__actions">
        {% if section.settings.primary_cta_label != blank %}
          <a
            class="hero-split__cta hero-split__cta--primary"
            href="{{ section.settings.primary_cta_link }}"
            data-analytics="hero-split-cta-primary"
            title="{{ section.settings.primary_cta_label | escape }}"
            aria-label="{{ section.settings.primary_cta_label | escape }}"
          >
            {{ section.settings.primary_cta_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_cta_label != blank %}
          <a
            class="hero-split__cta hero-split__cta--secondary"
            href="{{ section.settings.secondary_cta_link }}"
            data-analytics="hero-split-cta-secondary"
            title="{{ section.settings.secondary_cta_label | escape }}"
            aria-label="{{ section.settings.secondary_cta_label | escape }}"
          >
            {{ section.settings.secondary_cta_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-split {
    padding: 0;
  }
  .hero-split__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-7, 4rem);
    align-items: center;
  }
  .hero-split__inner--right {
    grid-template-areas: "content media";
  }
  .hero-split__inner--right .hero-split__media {
    grid-area: media;
  }
  .hero-split__inner--right .hero-split__content {
    grid-area: content;
  }
  .hero-split__media {
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: color-mix(in srgb, var(--color-muted) 10%, transparent);
    min-height: clamp(360px, 45vw, 520px);
  }
  .hero-split__media img,
  .hero-split__media svg {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }
  .hero-split__content {
    display: grid;
    gap: var(--space-3);
  }
  .hero-split__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.22em;
    font-size: 0.7rem;
    color: var(--color-muted);
    margin: 0;
  }
  .hero-split__heading {
    font-family: var(--font-accent--family);
    font-size: clamp(2rem, 3.5vw, 3rem);
    line-height: 1.1;
  }
  .hero-split__body {
    margin: 0;
    color: var(--color-muted);
    font-size: 1.05rem;
    max-width: 520px;
  }
  .hero-split__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-top: var(--space-2);
  }
  .hero-split__cta {
    text-decoration: none;
    padding: 0.85rem 1.8rem;
    border-radius: 0;
    border: 1px solid #111;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }
  .hero-split__cta--primary {
    background: #111;
    color: #fff;
  }
  .hero-split__cta--secondary {
    background: #fff;
    border: 1px solid #111;
    color: #111;
  }
  .hero-split__cta:hover,
  .hero-split__cta:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .hero-split__inner {
      grid-template-columns: 1fr;
    }
    .hero-split__inner--right {
      grid-template-areas: none;
    }
  }
{% endstylesheet %}

