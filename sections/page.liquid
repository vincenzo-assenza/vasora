{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h1' -%}

<section
  class="page-simple u-section"
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="page-simple__inner">
    <div class="page-simple__header">
      <{{ eyebrow_tag }} class="page-simple__eyebrow">{{ section.settings.eyebrow | default: "Studio" }}</{{ eyebrow_tag }}>
      <{{ heading_tag }} class="page-simple__title">{{ page.title }}</{{ heading_tag }}>
    </div>

    <div class="page-simple__content rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% stylesheet %}
  .page-simple__inner {
    width: min(100% - 2 * var(--container-padding-inline), 900px);
    margin: 0 auto;
    display: grid;
    gap: var(--space-6);
  }
  .page-simple__header {
    text-align: center;
    display: grid;
    gap: var(--space-2);
  }
  .page-simple__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.14em;
    font-size: 0.65rem;
    color: var(--color-muted);
    margin: 0;
  }
  .page-simple__title {
    font-family: var(--font-accent--family);
    font-size: clamp(2rem, 3.5vw, 3rem);
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.page",
  "settings": [
    {"type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Studio"},
    {
      "type": "select",
      "id": "eyebrow_tag",
      "label": "Eyebrow tag",
      "default": "p",
      "options": [
        { "value": "h1", "label": "h1" },
        { "value": "h2", "label": "h2" },
        { "value": "h3", "label": "h3" },
        { "value": "h4", "label": "h4" },
        { "value": "h5", "label": "h5" },
        { "value": "h6", "label": "h6" },
        { "value": "p", "label": "p" },
        { "value": "span", "label": "span" },
        { "value": "div", "label": "div" }
      ]
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading tag",
      "default": "h1",
      "options": [
        { "value": "h1", "label": "h1" },
        { "value": "h2", "label": "h2" },
        { "value": "h3", "label": "h3" },
        { "value": "h4", "label": "h4" },
        { "value": "h5", "label": "h5" },
        { "value": "h6", "label": "h6" },
        { "value": "p", "label": "p" },
        { "value": "span", "label": "span" },
        { "value": "div", "label": "div" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 240,
      "step": 4,
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 240,
      "step": 4,
      "default": 80
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin top",
      "min": 0,
      "max": 240,
      "step": 4,
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin bottom",
      "min": 0,
      "max": 240,
      "step": 4,
      "default": 0
    }
  ]
}
{% endschema %}
