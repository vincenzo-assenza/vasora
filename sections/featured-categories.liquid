<section class="featured-categories"{% if section.settings.anchor_id != blank %} id="{{ section.settings.anchor_id | escape }}"{% endif %}>
  <div class="featured-categories__inner">
    <div class="featured-categories__heading">
      {% if section.settings.eyebrow != blank %}
        <p class="featured-categories__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="featured-categories__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="featured-categories__grid" role="list">
      {% for block in section.blocks %}
        <a class="featured-categories__card" href="{{ block.settings.link }}" role="listitem" {{ block.shopify_attributes }}>
          <div class="featured-categories__media" style="--ratio: {{ block.settings.aspect_ratio | default: 1.25 }};">
            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: 1200
                | image_tag: loading: 'lazy', widths: '480, 720, 960, 1200', alt: block.settings.title
              }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder' }}
            {% endif %}
          </div>
          <div class="featured-categories__content">
            {% if block.settings.title != blank %}
              <h3 class="featured-categories__title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.copy != blank %}
              <p class="featured-categories__copy">{{ block.settings.copy }}</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .featured-categories {
    padding: var(--space-6) 0;
  }
  .featured-categories__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    gap: var(--space-5);
  }
  .featured-categories__heading {
    max-width: 560px;
    display: grid;
    gap: var(--space-2);
  }
  .featured-categories__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
    color: var(--color-muted);
    margin: 0;
  }
  .featured-categories__subheading {
    margin: 0;
    color: var(--color-muted);
  }
  .featured-categories__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-4);
  }
  .featured-categories__card {
    position: relative;
    display: grid;
    gap: var(--space-3);
    text-decoration: none;
    color: inherit;
  }
  .featured-categories__media {
    position: relative;
    width: 100%;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: color-mix(in srgb, var(--color-muted) 10%, transparent);
  }
  .featured-categories__media::before {
    content: "";
    display: block;
    padding-top: calc(100% / var(--ratio));
  }
  .featured-categories__media img,
  .featured-categories__media svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .featured-categories__media::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0) 30%, rgba(0,0,0,0.55) 100%);
  }
  .featured-categories__content {
    position: absolute;
    inset: auto var(--space-4) var(--space-4) var(--space-4);
    color: #fff;
    display: grid;
    gap: var(--space-1);
    z-index: 1;
  }
  .featured-categories__title {
    margin: 0;
    font-size: 1.15rem;
  }
  .featured-categories__copy {
    margin: 0;
    color: rgba(255,255,255,0.85);
    font-size: 0.95rem;
  }

  @media (max-width: 1024px) {
    .featured-categories__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  @media (max-width: 768px) {
    .featured-categories__grid {
      grid-auto-flow: column;
      grid-auto-columns: minmax(75%, 1fr);
      grid-template-columns: unset;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding-bottom: var(--space-2);
      gap: var(--space-3);
    }
    .featured-categories__card {
      scroll-snap-align: start;
    }
  }
  @media (max-width: 520px) {
    .featured-categories__grid {
      grid-auto-columns: minmax(85%, 1fr);
    }
  }
{% endstylesheet %}

