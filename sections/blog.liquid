{% comment %}
  This section is used in the blog template to render the blog page listing all
  articles within a blog.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/blog
{% endcomment %}

{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h1' -%}

<section
  class="blog-page u-section"
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="blog-page__inner">
    <div class="blog-page__heading">
      <{{ eyebrow_tag }} class="blog-page__eyebrow">{{ section.settings.eyebrow | default: "Journal" }}</{{ eyebrow_tag }}>
      <{{ heading_tag }} class="blog-page__title">{{ blog.title }}</{{ heading_tag }}>
      {% if blog.description != blank %}
        <p class="blog-page__description">{{ blog.description }}</p>
      {% endif %}
    </div>

    {% paginate blog.articles by 6 %}
      <div class="blog-page__grid">
        {% for article in blog.articles %}
          <article class="blog-page__card">
            <a class="blog-page__media" href="{{ article.url }}">
              {% if article.image %}
                {% render 'image', class: 'blog-page__image', image: article.image, width: 900 %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder' }}
              {% endif %}
            </a>
            <div class="blog-page__info">
              <h2 class="blog-page__article-title">{{ article.title | link_to: article.url }}</h2>
              {% assign date = article.published_at | time_tag: format: 'date' %}
              <p class="blog-page__meta">{{ 'blog.article_metadata_html' | t: date: date, author: article.author }}</p>
              <p class="blog-page__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 140 }}</p>
              <a class="blog-page__link" href="{{ article.url }}">Leggi</a>
            </div>
          </article>
        {% endfor %}
      </div>

      {%- if paginate.pages > 1 -%}
        <div class="blog-page__pagination">
          {{- paginate | default_pagination -}}
        </div>
      {%- endif -%}
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .blog-page__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    gap: var(--space-6);
  }
  .blog-page__heading {
    text-align: center;
    display: grid;
    gap: var(--space-2);
  }
  .blog-page__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.24em;
    font-size: 0.65rem;
    color: var(--color-muted);
    margin: 0;
  }
  .blog-page__title {
    font-family: var(--font-accent--family);
    font-size: clamp(2rem, 3.5vw, 3rem);
    margin: 0;
  }
  .blog-page__description {
    color: var(--color-muted);
    max-width: 60ch;
    margin: 0 auto;
  }
  .blog-page__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: clamp(1.5rem, 2.5vw, 2.5rem);
  }
  .blog-page__card {
    display: grid;
    gap: var(--space-3);
  }
  .blog-page__media {
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: block;
    background: color-mix(in srgb, var(--color-muted) 8%, transparent);
  }
  .blog-page__image img {
    width: 100%;
    height: auto;
    display: block;
  }
  .blog-page__info {
    display: grid;
    gap: var(--space-2);
  }
  .blog-page__article-title {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.85rem;
    margin: 0;
  }
  .blog-page__meta {
    font-size: 0.75rem;
    color: var(--color-muted);
    margin: 0;
  }
  .blog-page__excerpt {
    color: var(--color-muted);
    margin: 0;
  }
  .blog-page__link {
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.7rem;
    color: var(--color-foreground);
  }
  .blog-page__pagination {
    text-align: center;
  }

  @media (max-width: 1024px) {
    .blog-page__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  @media (max-width: 640px) {
    .blog-page__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

