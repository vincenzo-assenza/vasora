{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
{%- assign body_tag = section.settings.body_tag | default: 'p' -%}
<section
  class="product-spotlight"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="product-spotlight__inner">
    <div class="product-spotlight__media">
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: 1600
          | image_tag: loading: 'lazy', widths: '600, 900, 1200, 1600', alt: section.settings.heading
        }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
      {% endif %}
      {% if section.settings.badge != blank %}
        <span class="product-spotlight__badge">{{ section.settings.badge }}</span>
      {% endif %}
    </div>

    <div class="product-spotlight__content">
      {% if section.settings.eyebrow != blank %}
        <{{ eyebrow_tag }} class="product-spotlight__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
      {% endif %}
      {% if section.settings.heading != blank %}
        <{{ heading_tag }} class="product-spotlight__heading">{{ section.settings.heading }}</{{ heading_tag }}>
      {% endif %}
      {% if section.settings.body != blank %}
        <{{ body_tag }} class="product-spotlight__body">{{ section.settings.body }}</{{ body_tag }}>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <ul class="product-spotlight__features" role="list">
          {% for block in section.blocks %}
            <li class="product-spotlight__feature" {{ block.shopify_attributes }}>
              <span class="product-spotlight__feature-dot" aria-hidden="true"></span>
              {{ block.settings.text }}
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.price != blank %}
        <p class="product-spotlight__price">{{ section.settings.price }}</p>
      {% endif %}

      <div class="product-spotlight__actions">
        {% if section.settings.primary_cta_label != blank %}
          <a
            class="product-spotlight__cta product-spotlight__cta--primary"
            href="{{ section.settings.primary_cta_link }}"
            data-analytics="product-spotlight-cta-primary"
            title="{{ section.settings.primary_cta_label | escape }}"
            aria-label="{{ section.settings.primary_cta_label | escape }}"
          >
            {{ section.settings.primary_cta_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_cta_label != blank %}
          <a
            class="product-spotlight__cta product-spotlight__cta--secondary"
            href="{{ section.settings.secondary_cta_link }}"
            data-analytics="product-spotlight-cta-secondary"
            title="{{ section.settings.secondary_cta_label | escape }}"
            aria-label="{{ section.settings.secondary_cta_label | escape }}"
          >
            {{ section.settings.secondary_cta_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .product-spotlight {
    padding: var(--space-6) 0;
  }
  .product-spotlight__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-6);
    align-items: center;
  }
  .product-spotlight__media {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: color-mix(in srgb, var(--color-muted) 10%, transparent);
  }
  .product-spotlight__media img,
  .product-spotlight__media svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .product-spotlight__badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background: var(--color-foreground);
    color: var(--color-background);
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }
  .product-spotlight__content {
    display: grid;
    gap: var(--space-3);
  }
  .product-spotlight__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.72rem;
    color: var(--color-muted);
    margin: 0;
  }
  .product-spotlight__body {
    margin: 0;
    color: var(--color-muted);
  }
  .product-spotlight__features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-2);
  }
  .product-spotlight__feature {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-foreground);
  }
  .product-spotlight__feature-dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: var(--color-accent);
    flex: 0 0 8px;
  }
  .product-spotlight__price {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
  }
  .product-spotlight__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
  .product-spotlight__cta {
    text-decoration: none;
    padding: 0.85rem 1.8rem;
    border-radius: 0;
    border: 1px solid var(--cta-border, #111);
    font-weight: 400;
    font-size: 0.72rem;
    letter-spacing: var(--cta-letter-spacing, 0.12em);
    text-transform: uppercase;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 150ms ease, box-shadow 150ms ease, opacity 150ms ease;
  }
  .product-spotlight__cta--primary {
    --cta-bg: #111;
    --cta-fg: #fff;
    --cta-border: #111;
    background: var(--cta-bg);
    color: var(--cta-fg);
  }
  .product-spotlight__cta--secondary {
    --cta-bg: #fff;
    --cta-fg: #111;
    --cta-border: #111;
    background: var(--cta-bg);
    border: 1px solid var(--cta-border);
    color: var(--cta-fg);
  }
  .product-spotlight__cta:hover,
  .product-spotlight__cta:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .product-spotlight__inner {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

