<section class="product-spotlight"{% if section.settings.anchor_id != blank %} id="{{ section.settings.anchor_id | escape }}"{% endif %}>
  <div class="product-spotlight__inner">
    <div class="product-spotlight__media">
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: 1600
          | image_tag: loading: 'lazy', widths: '600, 900, 1200, 1600', alt: section.settings.heading
        }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
      {% endif %}
      {% if section.settings.badge != blank %}
        <span class="product-spotlight__badge">{{ section.settings.badge }}</span>
      {% endif %}
    </div>

    <div class="product-spotlight__content">
      {% if section.settings.eyebrow != blank %}
        <p class="product-spotlight__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.body != blank %}
        <p class="product-spotlight__body">{{ section.settings.body }}</p>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <ul class="product-spotlight__features" role="list">
          {% for block in section.blocks %}
            <li class="product-spotlight__feature" {{ block.shopify_attributes }}>
              <span class="product-spotlight__feature-dot" aria-hidden="true"></span>
              {{ block.settings.text }}
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.price != blank %}
        <p class="product-spotlight__price">{{ section.settings.price }}</p>
      {% endif %}

      <div class="product-spotlight__actions">
        {% if section.settings.primary_cta_label != blank %}
          <a class="product-spotlight__cta product-spotlight__cta--primary" href="{{ section.settings.primary_cta_link }}" data-analytics="product-spotlight-cta-primary">
            {{ section.settings.primary_cta_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_cta_label != blank %}
          <a class="product-spotlight__cta product-spotlight__cta--secondary" href="{{ section.settings.secondary_cta_link }}" data-analytics="product-spotlight-cta-secondary">
            {{ section.settings.secondary_cta_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .product-spotlight {
    padding: var(--space-6) 0;
  }
  .product-spotlight__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-6);
    align-items: center;
  }
  .product-spotlight__media {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: color-mix(in srgb, var(--color-muted) 10%, transparent);
  }
  .product-spotlight__media img,
  .product-spotlight__media svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .product-spotlight__badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background: var(--color-foreground);
    color: var(--color-background);
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }
  .product-spotlight__content {
    display: grid;
    gap: var(--space-3);
  }
  .product-spotlight__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
    color: var(--color-muted);
    margin: 0;
  }
  .product-spotlight__body {
    margin: 0;
    color: var(--color-muted);
  }
  .product-spotlight__features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-2);
  }
  .product-spotlight__feature {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-foreground);
  }
  .product-spotlight__feature-dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: var(--color-accent);
    flex: 0 0 8px;
  }
  .product-spotlight__price {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
  }
  .product-spotlight__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
  .product-spotlight__cta {
    text-decoration: none;
    padding: 0.6rem 1.4rem;
    border-radius: 2px;
    font-weight: 600;
    font-size: 0.72rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 150ms ease, box-shadow 150ms ease, opacity 150ms ease;
  }
  .product-spotlight__cta--primary {
    background: var(--color-accent);
    color: var(--color-background);
  }
  .product-spotlight__cta--secondary {
    border: 1px solid color-mix(in srgb, var(--color-foreground) 25%, transparent);
    color: var(--color-foreground);
  }
  .product-spotlight__cta:hover,
  .product-spotlight__cta:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .product-spotlight__inner {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

