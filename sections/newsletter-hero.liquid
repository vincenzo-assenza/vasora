<section class="newsletter-hero"{% if section.settings.anchor_id != blank %} id="{{ section.settings.anchor_id | escape }}"{% endif %}>
  <div class="newsletter-hero__media" aria-hidden="true">
    {% if section.settings.background_image != blank %}
      {{
        section.settings.background_image
        | image_url: width: 2000
        | image_tag: loading: 'lazy', widths: '800, 1200, 1600, 2000', alt: section.settings.heading
      }}
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder' }}
    {% endif %}
  </div>
  <div class="newsletter-hero__overlay"></div>
  <div class="newsletter-hero__inner">
    <p class="newsletter-hero__eyebrow">{{ section.settings.eyebrow }}</p>
    <h2 class="newsletter-hero__heading">{{ section.settings.heading }}</h2>
    <p class="newsletter-hero__subheading">{{ section.settings.subheading }}</p>

    {% form 'customer', class: 'newsletter-hero__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <label class="sr-only" for="NewsletterHeroEmail">Email</label>
      <input
        id="NewsletterHeroEmail"
        type="email"
        name="contact[email]"
        required
        autocomplete="email"
        placeholder="E-mail"
        aria-required="true"
      >
      <button type="submit">{{ section.settings.cta_label }}</button>
      {% if form.errors %}
        <p class="newsletter-hero__message" role="alert">{{ form.errors | default_errors }}</p>
      {% elsif form.posted_successfully? %}
        <p class="newsletter-hero__message" role="status">Grazie! Sei iscritto.</p>
      {% endif %}
    {% endform %}
  </div>
</section>

{% stylesheet %}
  .newsletter-hero {
    position: relative;
    min-height: clamp(320px, 55vh, 520px);
    color: #fff;
    overflow: hidden;
  }
  .newsletter-hero__media,
  .newsletter-hero__media img,
  .newsletter-hero__media svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsletter-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(0,0,0,0.55), rgba(0,0,0,0.2));
  }
  .newsletter-hero__inner {
    position: relative;
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    min-height: inherit;
    display: grid;
    align-content: center;
    gap: var(--space-3);
    text-align: center;
  }
  .newsletter-hero__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.22em;
    font-size: 0.7rem;
  }
  .newsletter-hero__heading {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: clamp(1.6rem, 3.5vw, 2.6rem);
    margin: 0;
  }
  .newsletter-hero__subheading {
    color: rgba(255,255,255,0.85);
    max-width: 560px;
    margin: 0 auto;
  }
  .newsletter-hero__form {
    margin-top: var(--space-3);
    display: grid;
    grid-template-columns: minmax(0, 320px) auto;
    gap: var(--space-3);
    justify-content: center;
  }
  .newsletter-hero__form input {
    padding: 0.7rem 0.9rem;
    border-radius: 2px;
    border: 1px solid rgba(255,255,255,0.5);
    background: rgba(0,0,0,0.35);
    color: #fff;
  }
  .newsletter-hero__form button {
    padding: 0.7rem 1.4rem;
    border-radius: 2px;
    border: none;
    background: #fff;
    color: #111;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
  }
  .newsletter-hero__message {
    grid-column: 1 / -1;
    margin: 0;
  }

  @media (max-width: 700px) {
    .newsletter-hero__form {
      grid-template-columns: 1fr;
      width: min(100%, 360px);
      margin-inline: auto;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter hero",
  "settings": [
    {"type": "text", "id": "anchor_id", "label": "Anchor ID", "default": "newsletter"},
    {"type": "image_picker", "id": "background_image", "label": "Background image"},
    {"type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Keep me updated"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Newsletter"},
    {"type": "text", "id": "subheading", "label": "Subheading", "default": "Subscribe to get notified about product launches, special offers and company news."},
    {"type": "text", "id": "cta_label", "label": "CTA label", "default": "Subscribe"}
  ],
  "presets": [
    {"name": "Newsletter hero", "category": "Aurum"}
  ]
}
{% endschema %}
