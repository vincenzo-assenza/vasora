{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
{%- assign subheading_tag = section.settings.subheading_tag | default: 'p' -%}
<section
  class="newsletter-hero"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="newsletter-hero__media" aria-hidden="true">
    {% if section.settings.background_image != blank %}
      {{
        section.settings.background_image
        | image_url: width: 2000
        | image_tag: loading: 'lazy', widths: '800, 1200, 1600, 2000', alt: section.settings.heading
      }}
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder' }}
    {% endif %}
  </div>
  <div class="newsletter-hero__overlay"></div>
  <div class="newsletter-hero__inner">
    <{{ eyebrow_tag }} class="newsletter-hero__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
    <{{ heading_tag }} class="newsletter-hero__heading">{{ section.settings.heading }}</{{ heading_tag }}>
    <{{ subheading_tag }} class="newsletter-hero__subheading">{{ section.settings.subheading }}</{{ subheading_tag }}>

    {% form 'customer', class: 'newsletter-hero__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <label class="sr-only" for="NewsletterHeroEmail">Email</label>
      <input
        id="NewsletterHeroEmail"
        type="email"
        name="contact[email]"
        required
        autocomplete="email"
        placeholder="E-mail"
        aria-required="true"
      >
      <button type="submit" title="{{ section.settings.cta_title | default: section.settings.cta_label | escape }}" aria-label="{{ section.settings.cta_title | default: section.settings.cta_label | escape }}">{{ section.settings.cta_label }}</button>
      {% if form.errors %}
        <p class="newsletter-hero__message" role="alert">{{ form.errors | default_errors }}</p>
      {% elsif form.posted_successfully? %}
        <p class="newsletter-hero__message" role="status">Grazie! Sei iscritto.</p>
      {% endif %}
    {% endform %}
  </div>
</section>

{% stylesheet %}
  .newsletter-hero {
    position: relative;
    min-height: clamp(320px, 55vh, 520px);
    color: #fff;
    overflow: hidden;
  }
  .newsletter-hero__media,
  .newsletter-hero__media img,
  .newsletter-hero__media svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsletter-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(0,0,0,0.55), rgba(0,0,0,0.2));
  }
  .newsletter-hero__inner {
    position: relative;
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    min-height: inherit;
    display: grid;
    align-content: center;
    gap: var(--space-3);
    text-align: center;
  }
  .newsletter-hero__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.14em;
    font-size: 0.7rem;
  }
  .newsletter-hero__heading {
    text-transform: uppercase;
    letter-spacing: var(--cta-letter-spacing, 0.12em);
    font-size: clamp(1.6rem, 3.5vw, 2.6rem);
    margin: 0;
  }
  .newsletter-hero__subheading {
    color: rgba(255,255,255,0.85);
    max-width: 560px;
    margin: 0 auto;
  }
  .newsletter-hero__form {
    margin-top: var(--space-3);
    display: grid;
    grid-template-columns: minmax(0, 320px) auto;
    gap: var(--space-3);
    justify-content: center;
  }
  .newsletter-hero__form input {
    padding: 0.7rem 0.9rem;
    border-radius: 2px;
    border: 1px solid rgba(255,255,255,0.5);
    background: rgba(0,0,0,0.35);
    color: #fff;
  }
  .newsletter-hero__form button {
    padding: 0.7rem 1.4rem;
    border-radius: 2px;
    --cta-bg: #fff;
    --cta-fg: #111;
    --cta-border: #fff;
    border: 1px solid var(--cta-border);
    background: var(--cta-bg);
    color: var(--cta-fg);
    text-transform: uppercase;
    letter-spacing: var(--cta-letter-spacing, 0.12em);
    font-size: 0.72rem;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }
  .newsletter-hero__form button:hover,
  .newsletter-hero__form button:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
  .newsletter-hero__message {
    grid-column: 1 / -1;
    margin: 0;
  }

  @media (max-width: 700px) {
    .newsletter-hero__form {
      grid-template-columns: 1fr;
      width: min(100%, 360px);
      margin-inline: auto;
    }
  }
{% endstylesheet %}

