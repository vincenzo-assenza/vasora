{%- assign eyebrow_tag = section.settings.eyebrow_tag | default: 'p' -%}
{%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
{%- assign subheading_tag = section.settings.subheading_tag | default: 'p' -%}
<section
  class="hero-final-cta"
  {% if section.settings.anchor_id != blank %}id="{{ section.settings.anchor_id | escape }}"{% endif %}
  style="--cta-bg: {{ section.settings.background_color | default: 'var(--color-accent)' }}; --cta-fg: {{ section.settings.text_color | default: 'var(--color-background)' }}; padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px; margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;"
>
  <div class="hero-final-cta__inner">
    {% if section.settings.eyebrow != blank %}
      <{{ eyebrow_tag }} class="hero-final-cta__eyebrow">{{ section.settings.eyebrow }}</{{ eyebrow_tag }}>
    {% endif %}
    {% if section.settings.heading != blank %}
      <{{ heading_tag }} class="hero-final-cta__heading">{{ section.settings.heading }}</{{ heading_tag }}>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <{{ subheading_tag }} class="hero-final-cta__subheading">{{ section.settings.subheading }}</{{ subheading_tag }}>
    {% endif %}
    <div class="hero-final-cta__actions">
      {% if section.settings.primary_cta_label != blank %}
        <a
          class="hero-final-cta__button hero-final-cta__button--primary"
          href="{{ section.settings.primary_cta_link }}"
          data-analytics="final-cta-primary"
          title="{{ section.settings.primary_cta_label | escape }}"
          aria-label="{{ section.settings.primary_cta_label | escape }}"
        >
          {{ section.settings.primary_cta_label }}
        </a>
      {% endif %}
      {% if section.settings.secondary_cta_label != blank %}
        <a
          class="hero-final-cta__button hero-final-cta__button--secondary"
          href="{{ section.settings.secondary_cta_link }}"
          data-analytics="final-cta-secondary"
          title="{{ section.settings.secondary_cta_label | escape }}"
          aria-label="{{ section.settings.secondary_cta_label | escape }}"
        >
          {{ section.settings.secondary_cta_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-final-cta {
    background: var(--cta-bg);
    color: var(--cta-fg);
    padding: 0;
  }
  .hero-final-cta__inner {
    width: min(100% - 2 * var(--container-padding-inline), var(--container-max));
    margin: 0 auto;
    text-align: center;
    display: grid;
    gap: var(--space-3);
    justify-items: center;
  }
  .hero-final-cta__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
    margin: 0;
    opacity: 0.8;
  }
  .hero-final-cta__subheading {
    margin: 0;
    opacity: 0.85;
  }
  .hero-final-cta__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    justify-content: center;
    margin-top: var(--space-2);
  }
  .hero-final-cta__button {
    text-decoration: none;
    padding: 0.6rem 1.4rem;
    border-radius: 2px;
    font-weight: 600;
    font-size: 0.72rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 150ms ease, box-shadow 150ms ease, opacity 150ms ease;
  }
  .hero-final-cta__button--primary {
    background: var(--cta-fg);
    color: var(--cta-bg);
  }
  .hero-final-cta__button--secondary {
    background: #fff;
    border: 1px solid #111;
    color: #111;
  }
  .hero-final-cta__button:hover,
  .hero-final-cta__button:focus-visible {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 640px) {
    .hero-final-cta {
      padding: var(--space-5) 0;
    }
    .hero-final-cta__actions {
      flex-direction: column;
      width: 100%;
    }
    .hero-final-cta__button {
      width: 100%;
    }
  }
{% endstylesheet %}

