{% if section.blocks.size > 0 %}
  <section
    class="announcement-bar"
    role="region"
    aria-label="{{ section.settings.aria_label | default: 'Announcement bar' }}"
    data-announcement-bar
    data-autoplay="{{ section.settings.autoplay }}"
  >
    <div class="announcement-bar__inner{% unless section.settings.full_width %} u-container{% endunless %}">
      <div class="announcement-bar__track" data-announcement-track>
        {% for block in section.blocks %}
          {% assign content = block.settings.content %}
          {% if content != blank %}
            <div
              class="announcement-bar__slide{% if forloop.first %} is-active{% endif %}"
              data-announcement-slide
              {{ block.shopify_attributes }}
            >
              <div class="announcement-bar__item rte">{{ content }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

{% stylesheet %}
  .announcement-bar {
    background: var(--color-background);
    color: var(--color-foreground);
    border-bottom: 1px solid var(--color-border);
    min-height: 2.2rem;
    display: flex;
    align-items: center;
  }

  .announcement-bar__inner {
    width: 100%;
    margin: 0 auto;
    padding: 0.45rem var(--container-padding-inline);
  }

  .announcement-bar__track {
    position: relative;
  }

  .announcement-bar__slide {
    display: none;
    width: 100%;
  }

  .announcement-bar__slide.is-active {
    display: block;
  }

  .announcement-bar__item {
    margin: 0;
    text-align: center;
    font-size: 0.8rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .announcement-bar__item p {
    margin: 0;
  }
{% endstylesheet %}

{% javascript %}
  (() => {
    const root = document.querySelector('[data-announcement-bar]');
    if (!root) return;

    const slides = Array.from(root.querySelectorAll('[data-announcement-slide]'));
    if (slides.length <= 1) return;

    let index = 0;
    const show = (nextIndex) => {
      slides[index]?.classList.remove('is-active');
      index = nextIndex;
      slides[index]?.classList.add('is-active');
    };

    const autoplay = root.dataset.autoplay === 'true';
    if (!autoplay) return;

    setInterval(() => {
      const next = (index + 1) % slides.length;
      show(next);
    }, 3500);
  })();
{% endjavascript %}

